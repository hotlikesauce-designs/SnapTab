<div>
  <div>
    <h1>
      List of all groups
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new group
    </h2>

    <form action="/insert_group" method="post">
      <div>
        <label for="group_name_box">
          Group name
        </label>

        <input type="text" id="group_name_box" name="query_group_name">
      </div>

      <div>
        <label for="group_description_box">
          Group description
        </label>

        <input type="text" id="group_description_box" name="query_group_description">
      </div>

      <button>
        Create group
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Group name
        </th>

        <th>
          Creator
        </th>

        <th>
          Group description
        </th>

        <th>
          Memberships count
        </th>

        <th>
          Categories count
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_groups.each do |a_group| %>
      <tr>
        <td>
          <%= a_group.id %>
        </td>

        <td>
          <%= a_group.group_name %>
        </td>

        <td>
          <%= a_group.creator_id %>
        </td>

        <td>
          <%= a_group.group_description %>
        </td>

        <td>
          <%= a_group.memberships_count %>
        </td>

        <td>
          <%= a_group.categories_count %>
        </td>

        <td>
          <%= time_ago_in_words(a_group.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_group.updated_at) %> ago
        </td>

        <td>
          <a href="/groups/<%= a_group.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
